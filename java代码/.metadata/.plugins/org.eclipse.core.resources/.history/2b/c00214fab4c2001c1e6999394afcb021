package 第二周代码;

public class 代码05数组逆序输出 {
public static void main(String[] args) {
	int [] arr= {2,3,4,5,6};
	int i,t;
	System.out.println("逆序前的数组为：");
	for(i=0;i<arr.length;i++) {
		if(i==arr.length-1) {
			System.out.println(arr[i]);
		}
		else {
		System.out.print(arr[i]+",");
    }
	}
	for(i=0;i<arr.length;i++) {
//		//if(i%2==0) {
//			t=arr[arr.length-i-1];
//			arr[arr.length-i-1]=arr[i];
//			arr[i]=t;
//		}
		else {
			if(i==arr.length/2) {
				break;
			}
			t=arr[arr.length-i-1];
			arr[arr.length-i-1]=arr[i];
			arr[i]=t;
		}
		}
	System.out.println();
	System.out.println("逆序之后的数组为：");
	for(i=0;i<arr.length;i++) {
		if(i==arr.length-1) {
			System.out.println(arr[i]);
		}
		else {
		System.out.print(arr[i]+",");
		}
}
}	
}
